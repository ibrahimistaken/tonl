{
  "name": "TONL",
  "scopeName": "source.tonl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#headers"
    },
    {
      "include": "#inline-objects"
    },
    {
      "include": "#arrays"
    },
    {
      "include": "#values"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.tonl",
          "match": "^\\s*#.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "meta.directive.tonl",
          "match": "^@(version|delimiter|type|schema|types)\\b(.*)$",
          "captures": {
            "1": {
              "name": "keyword.control.directive.tonl"
            },
            "2": {
              "name": "string.unquoted.tonl"
            }
          }
        }
      ]
    },
    "headers": {
      "patterns": [
        {
          "name": "entity.name.section.array.tonl",
          "match": "^([a-zA-Z_][a-zA-Z0-9_]*)\\[(\\d+)\\]:",
          "captures": {
            "1": {
              "name": "entity.name.tag.tonl"
            },
            "2": {
              "name": "constant.numeric.tonl"
            }
          }
        },
        {
          "name": "entity.name.section.tonl",
          "match": "^([a-zA-Z_][a-zA-Z0-9_]*):",
          "captures": {
            "1": {
              "name": "entity.name.tag.tonl"
            }
          }
        }
      ]
    },
    "inline-objects": {
      "patterns": [
        {
          "name": "meta.inline-object.tonl",
          "begin": "\\{",
          "end": "\\}",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.dictionary.begin.tonl"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.dictionary.end.tonl"
            }
          },
          "patterns": [
            {
              "include": "#object-keys"
            },
            {
              "include": "#delimiters"
            },
            {
              "include": "#values"
            },
            {
              "include": "#inline-objects"
            }
          ]
        }
      ]
    },
    "arrays": {
      "patterns": [
        {
          "name": "meta.array.tonl",
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.array.begin.tonl"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.array.end.tonl"
            }
          },
          "patterns": [
            {
              "include": "#delimiters"
            },
            {
              "include": "#values"
            },
            {
              "include": "#inline-objects"
            },
            {
              "include": "#arrays"
            }
          ]
        }
      ]
    },
    "object-keys": {
      "patterns": [
        {
          "name": "meta.object-key.tonl",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": {
              "name": "variable.other.property.tonl"
            }
          }
        }
      ]
    },
    "delimiters": {
      "patterns": [
        {
          "name": "punctuation.separator.tonl",
          "match": "[,|;\\t]"
        }
      ]
    },
    "values": {
      "patterns": [
        {
          "include": "#strings"
        },
        {
          "include": "#numbers"
        },
        {
          "include": "#booleans"
        },
        {
          "include": "#null"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.tonl",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.tonl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.tonl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tonl",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.tonl",
          "match": "-?(?:0|[1-9]\\d*)(?:\\.\\d+)?(?:[eE][+-]?\\d+)?"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.tonl",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "null": {
      "patterns": [
        {
          "name": "constant.language.null.tonl",
          "match": "\\bnull\\b"
        }
      ]
    }
  }
}
